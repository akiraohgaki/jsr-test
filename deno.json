{
  "name": "@akiraohgaki/jsr-test",
  "version": "0.0.13",
  "exports": {
    ".": "./mod.ts"
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "mod.ts",
      "README.md",
      "LICENSE"
    ]
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "esnext",
      "dom",
      "dom.iterable",
      "dom.asynciterable"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true
  },
  "lint": {
    "include": [
      "src/",
      "tests/",
      "*.ts"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "explicit-module-boundary-types"
      ],
      "exclude": [
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "include": [
      "src/",
      "tests/",
      "*.ts",
      "*.md"
    ],
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "test": {
    "include": [
      "tests/unit/"
    ]
  },
  "tasks": {
    "test": "deno test tests/unit/"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert"
  }
}
